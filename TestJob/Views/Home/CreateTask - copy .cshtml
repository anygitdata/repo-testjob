@model TaskUpdate

<style>
    label, .shortDataTask {
        font-weight: 500;
    }

    #div-details, #div-short-data-task {
        background-color: #c5f0ce;
    }
</style>

<div>
    <input type="hidden" asp-for="OperTask" />
    <input type="hidden" asp-for="projectId" />
    <input type="hidden" asp-for="TaskId" />
</div>

<div class="container" style="max-width:25rem">

    <h1 class="u-h1Smaller">Task creation form</h1>
    <h3 class="u-h3Smaller">Project: <span><b>@Model.projectName</b></span></h3>

    <div class="divMessage text-danger">

    </div>

    <form class="mt-3" asp-action="CreateTask" asp-controller="Home" method="post">

        <div id="div-short-data-task" class="p-1 mb-2" style="display:none">
            Task: <span class="nameTask shortDataTask"></span> <br />
            date: <span class="taskData shortDataTask"></span> <br />
            time: <span class="taskTime shortDataTask"></span>
            <div class="mt-1 shortData-start border-top border-success" style="display:none">
                startDate: <span class="taskStartData shortDataTask"></span> <br />
                startTime: <span class="taskStartTime shortDataTask"></span>
            </div>
        </div>

        <div id="divCont-create-task">
            <div class="form-group">
                <label for="TaskName">TaskName</label>
                <input asp-for="TaskName" type="text"
                       class="form-control mt-n2" placeholder="TaskName">
            </div>

            <div class="form-group">
                <label for="dateCreate">dateCreate</label>
                <input asp-for="dateCreate" readonly type="text"
                       class="form-control mt-n2" placeholder="dateCreate">
            </div>


            <div class="form-group">
                <label for="timeCreate">timeCreate</label>
                <input asp-for="timeCreate" readonly type="text"
                       class="form-control mt-n2" placeholder="timeCreate">
            </div>

        </div>

        <div id="div-btn-details" style="display:none">
            <p class="paragraph_text">Would you like to proceed to filling in the task details?</p>
            <button id="btn-filling-details"
                    class="btn btn-light btn-sm mt-n2">
                Filling Details
            </button>
        </div>

        <div id="divDetails-start" class="p-1"
             style="display: none;">

            <div class="form-group">
                <label for="StartDate">StartDate</label>
                <input asp-for="StartDate" readonly type="text"
                       class="form-control mt-n2" placeholder="StartDate">
            </div>

            <div class="form-group">
                <label for="StartTime">StartTime</label>
                <input asp-for="StartTime" readonly type="text"
                       class="form-control mt-n2" placeholder="StartTime">
            </div>

        </div>

        <button type="submit" class="btn btn-primary btn-sm px-5 mt-3"
                id="btn-save">
            Save
        </button>
    </form>


</div>


@section Picker {
    <link rel="stylesheet" type="text/css" href="~/Plagin/jquery.datetimepicker.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Plagin/timepicker-ui.min.css" />
}

@section scriptCreateTask{
    <script src="~/Plagin/jquery.datetimepicker.full.min.js"></script>
    <script src="~/Plagin/timepicker-ui.min.js"></script>

    <script src="~/js/createTask.js"></script>
}



