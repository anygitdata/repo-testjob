@model BaseProjectView

<h1>Create project</h1>


<div class="container">

    <form asp-action="InsProject" asp-controller="Home" method="post">

        <div>
            <input type="hidden"  asp-for="ProjectId"  />
        </div>

        <div class="form-group row">
            <div class="form-group row">
                <label asp-for="ProjectName" class="col-sm-3 col-form-label" />
                <div class="col-sm-6">
                    <input type="text"
                           asp-for="ProjectName" class="form-control" />
                </div>

                @if (Model.TypeOperations == "insert")
                {
                    <div class="form-group create-proj">
                        <label>Date and time create task</label> <br />
                        <input asp-for="Date" readonly type="text"
                               class="comp-dt" 
                               placeholder="DateCreate">

                        <input asp-for="Time" readonly type="text"
                                class="ml-2 comp-dt comp-time" 
                                placeholder="TimeCreate">
                    </div>

                }
                else
                {                    
                    <div class="form-group upd-proj">
                        <label>Date and time begin task</label> <br />
                        <input asp-for="DateUpd" readonly type="text"
                               class="comp-dt" placeholder="DateUpd">

                        <input asp-for="TimeUpd" readonly type="text"
                               class="ml-2 comp-dt comp-time" placeholder="TimeUpd">
                    </div>
                }

            </div>

            <div class="mt-2">
                    <button type="submit" class="btn btn-primary px-5 py-0">Save</button>
            </div>
        </div>

    </form>

</div>