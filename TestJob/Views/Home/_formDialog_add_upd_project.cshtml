@model IEnumerable<ModelProjectMenu>

@{ 
    string test = ViewBag.test as string;
}


<style>
    .info-element {
        font-weight: 500;
    }

    .comp-dt {
        max-width: 7rem;
        background-color: #e9ecef;
        border: none;
    }

    .comp-time {
        max-width: 6rem;
    }
</style>

<div>
    <input type="hidden" id="projectId" value="" />
    <input type="hidden" id="typeOperations" />
    <input type="hidden" id="test" value="@test" />
</div>

<div class="container" id="formDialog" role="dialog" style="display: none;"
     aria-labelledby="formDialog"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dlg_titleLabel">Create project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container" data-typedlg="empty">

                    <div class="dataError text-danger"></div>

                    <div class="form-group">
                        <label for="dlgPr-projectName"
                               class="info-element">ProjectName</label>
                        <input type="text" id="dlgPr-projectName"
                               class="form-control" />
                    </div>

                    <div class="form-group fm-add-proj">
                        <label class="info-element">Date and time create project</label> <br />
                        <input id="dlgPr-date" readonly type="text"
                               class="comp-dt"
                               placeholder="DateCreate">

                        <input id="dlgPr-time" readonly type="text"
                               class="ml-2 comp-dt comp-time"
                               placeholder="TimeCreate">
                    </div>

                    <div class="form-group fm-upd-proj">
                        <label class="info-element">Date and time update project</label> <br />
                        <input id="dlgPr-dateUpd" readonly type="text"
                               class="comp-dt" placeholder="DateUpd">

                        <input id="dlgPr-timeUpd" readonly type="text"
                               class="ml-2 comp-dt comp-time" placeholder="TimeUpd">
                    </div>

                </div>
            </div>

            <div class="modal-footer pt-0">
                <button type="button"
                        id="btn-closeDialog"
                        class="btn btn-secondary">
                    Close
                </button>

                <button type="button" class="btn btn-primary" 
                        id="btn-save-changes">Save changes</button>
            </div>
        </div>
    </div>
</div>


