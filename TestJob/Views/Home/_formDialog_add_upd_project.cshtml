@model BaseProjectView

    <style>
       /* label, .shortDataTask {
            font-weight: 500;
        }*/

        /*#div-details, #div-short-data-task {
            background-color: #c5f0ce;
        }*/

        .comp-dt {
            max-width: 7rem;
            background-color: #e9ecef;
            border: none;
        }

        .comp-time {
            max-width: 6rem;
        }
    </style>

<div class="container" id="formDialog" role="dialog" style="display: none;"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="dlg_titleLabel">Create project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">

                    <div class="dataError text-danger"></div>

                    <form>

                        <div class="form-group">
                            <label asp-for="ProjectName"
                                    class="form-check-label" />                                    
                            <input type="text" asp-for="ProjectName"
                                    class="form-control" />
                        </div>

                        <div class="form-group fm-add-proj">
                            <label>Date and time create task</label> <br />
                            <input asp-for="Date" readonly type="text"
                                    class="comp-dt"
                                    placeholder="DateCreate">

                            <input asp-for="Time" readonly type="text"
                                    class="ml-2 comp-dt comp-time"
                                    placeholder="TimeCreate">
                        </div>


                        <div class="form-group fm-upd-proj">
                            <label>Date and time begin task</label> <br />
                            <input asp-for="DateUpd" readonly type="text"
                                    class="comp-dt" placeholder="DateUpd">

                            <input asp-for="TimeUpd" readonly type="text"
                                    class="ml-2 comp-dt comp-time" placeholder="TimeUpd">
                        </div>

                    </form>

                </div>
            </div>
            <div class="modal-footer pt-0">
                <button type="button" 
                        id="btn-closeDialog"
                        class="btn btn-secondary">Close </button>

                <button type="button" class="btn btn-primary" id="btn-save-changes">Save changes</button>
            </div>
        </div>
    </div>
</div>
